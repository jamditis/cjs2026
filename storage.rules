rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile photos - users can only write their own, anyone can read
    match /profile-photos/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 2 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // CMS Images - Admin upload/delete for sponsor logos, etc.
    // Organized by category: cms-images/sponsors/, cms-images/timeline/, etc.
    // Note: Full admin check happens in Cloud Function before upload URL is provided
    // Storage rules add defense-in-depth with size/type limits
    match /cms-images/{allPaths=**} {
      // Public read - images are displayed on the website
      allow read: if true;
      // Write access: authenticated + size/type limits
      // The admin panel validates role before allowing upload
      allow write: if request.auth != null
                   && request.resource.size < 2 * 1024 * 1024
                   && request.resource.contentType.matches('image/(png|jpeg|jpg|gif|webp|svg\\+xml)');
      // Delete requires authentication (admin panel validates role)
      allow delete: if request.auth != null;
    }
  }
}
