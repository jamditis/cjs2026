rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile photos - users can only write their own, anyone can read
    match /profile-photos/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 2 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // CMS Images - Admin upload/delete for sponsor logos, etc.
    // Organized by category: cms-images/sponsors/, cms-images/timeline/, etc.
    //
    // SECURITY NOTE: Storage rules cannot query Firestore for role checks.
    // Admin validation is enforced at the application layer:
    // 1. CMSManager.jsx checks isAdmin/isSuperAdmin before showing upload UI
    // 2. Upload URLs are only generated after role validation in the admin panel
    // 3. Storage rules provide defense-in-depth with auth + size/type limits
    //
    // For maximum security with cross-service role checks, use signed URLs
    // generated by Cloud Functions (which can validate admin role first).
    match /cms-images/{allPaths=**} {
      // Public read - images are displayed on the website
      allow read: if true;
      // Write access: authenticated + size/type limits
      // Admin validation happens in the React app before upload
      allow write: if request.auth != null
                   && request.resource.size < 2 * 1024 * 1024
                   && request.resource.contentType.matches('image/(png|jpeg|jpg|gif|webp|svg\\+xml)');
      // Delete: Not allowed from client - use Cloud Functions with admin validation
      // Storage rules cannot query Firestore for role, so we block client-side deletes
      // Admins can delete via cmsUploadImage Cloud Function or Firebase Console
      allow delete: if false;
    }
  }
}
