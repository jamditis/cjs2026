rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if user is super admin
    function isSuperAdmin() {
      return request.auth != null &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
    }

    // User profiles
    match /users/{userId} {
      // Users can read/write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Admins can read all profiles (for admin panel)
      allow read: if isAdmin() || isSuperAdmin();
      // Admins can update user profiles (except system role)
      allow update: if isAdmin() &&
                      !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']);
      // Super admins can update any field including role
      allow update: if isSuperAdmin();
      // Admins and super admins can delete users
      allow delete: if isAdmin() || isSuperAdmin();
    }

    // Email signups - anyone can create, only Cloud Functions can read
    match /email_signups/{document=**} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // Activity logs - only admins can read, only Cloud Functions can write
    match /activity_logs/{logId} {
      allow read: if isAdmin() || isSuperAdmin();
      allow write: if false; // Only Cloud Functions can write
    }

    // Admin audit logs - only admins can read, only Cloud Functions can write
    match /admin_logs/{logId} {
      allow read: if isAdmin() || isSuperAdmin();
      allow write: if false; // Only Cloud Functions can write
    }

    // System errors - only admins can read, only Cloud Functions can write
    match /system_errors/{errorId} {
      allow read: if isAdmin() || isSuperAdmin();
      allow write: if false; // Only Cloud Functions can write
    }

    // Background jobs - only admins can read, only Cloud Functions can write
    match /background_jobs/{jobId} {
      allow read: if isAdmin() || isSuperAdmin();
      allow write: if false; // Only Cloud Functions can write
    }

    // Edit requests - anyone can create, only admins can read/update
    match /edit_requests/{requestId} {
      allow create: if request.auth != null;
      allow read, update: if isAdmin() || isSuperAdmin();
    }

    // Admin settings - only admins can read/write
    // Used for editable goals, dates, and configuration in admin panel
    match /admin_settings/{docId} {
      allow read, write: if isAdmin() || isSuperAdmin();
    }

    // Announcements - public read, admin write
    // Used for site-wide announcement banners managed in admin panel
    match /announcements/{announcementId} {
      // Anyone can read active announcements (for the public banner)
      allow read: if true;
      // Only admins can create, update, delete
      allow create, update, delete: if isAdmin() || isSuperAdmin();
    }

    // Session bookmark counts - public read, authenticated users can update counts
    // Used for displaying how many attendees have saved each session
    match /sessionBookmarks/{sessionId} {
      // Anyone can read bookmark counts (shown on public schedule page)
      allow read: if true;
      // Authenticated users can create/update counts (increment/decrement when saving/unsaving)
      allow create, update: if request.auth != null;
      // Only admins can delete (reset counts)
      allow delete: if isAdmin() || isSuperAdmin();
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
