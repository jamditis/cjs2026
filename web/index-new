const TimelineItem = ({ year, location, theme, index, icon }) => (
  <div className="relative pl-8 md:pl-0 md:flex md:justify-center md:gap-16 pb-12 group">
    {/* Line */}
    <div className="absolute left-[11px] top-0 bottom-0 w-px bg-slate-800 md:left-1/2 md:-ml-px group-last:bottom-auto group-last:h-4"></div>
    
