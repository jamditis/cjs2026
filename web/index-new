    <div className={`absolute left-0 w-6 h-6 rounded-full border-4 border-slate-900 z-10 md:left-1/2 md:-ml-3 transition-colors duration-300 ${year === '2026' ? 'bg-[#CA3553] scale-125' : 'bg-slate-700 group-hover:bg-[#CA3553]'}`}></div>

    {/* Content - Alternating sides on Desktop */}
    <div className={`md:w-5/12 ${index % 2 === 0 ? 'md:text-right' : 'md:order-2'} transition-all duration-500 hover:translate-x-2 md:hover:translate-x-0 md:hover:-translate-y-1`}>
      <div className="flex items-center gap-2 md:justify-end mb-1 text-[#CA3553] font-bold">
        {index % 2 !== 0 && <div className="md:hidden">{icon}</div>}
        <span className="text-lg">{year}</span>
        {index % 2 === 0 && <div className="hidden md:block">{icon}</div>}
      </div>
      <h3 className="text-xl font-bold text-slate-100 mb-1">{location}</h3>
      <p className="text-slate-400 text-sm">{theme}</p>
    </div>
    
